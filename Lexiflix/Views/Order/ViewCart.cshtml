@model IEnumerable<Lexiflix.Models.OrderRow>

@{
    ViewData["Title"] = "ViewCart";
}

<h1>ViewCart</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
                <td>
                    <form asp-action="AddCopy" method="post" style="display:inline;">
                        <input type="hidden" name="movieId" value="@item.MovieId" />
                        <button type="submit">➕</button>
                    </form>
                    <form asp-action="RemoveCopy" method="post" style="display:inline;">
                        <input type="hidden" name="movieId" value="@item.MovieId" />
                        <button type="submit">➖</button>
                    </form>
                </td>
           
        </tr>
}
    </tbody>
</table>
@if (Model.Any())
{
    <h4>Total: @Model.Sum(i => i.Price * i.Quantity).ToString("C")</h4>

    <form asp-action="Checkout" method="post">
        <h3>Checkout</h3>
        <label>Email:</label> <input type="email" name="email" required /><br />
        <label>First Name:</label> <input type="text" name="FirstName" /><br />
        <label>Last Name:</label> <input type="text" name="LastName" /><br />
        <label>Address:</label> <input type="text" name="Address" /><br />
        <label>Phone:</label> <input type="text" name="Phone" /><br />
        <br />
        <button type="submit" class="btn btn-success">Place Order</button>
    </form>
}