@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');
            const sortSelect = document.getElementById('sortSelect');

            // Debounce function to limit how often the search triggers
            function debounce(func, delay) {
                let timeoutId;
                return function() {
                    clearTimeout(timeoutId);
                    timeoutId = setTimeout(func, delay);
                };
            }

            // Function to submit the form
            function submitForm() {
                // Reset to first page when search changes
                document.querySelector('input[name="pageNumber"]').value = '1';
                searchForm.submit();
            }

            // Trigger search when typing (with 500ms delay after last keystroke)
            searchInput.addEventListener('input', debounce(submitForm, 100));

            // Also trigger search immediately when Enter is pressed
            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    submitForm();
                }
            });

            // Trigger search when sort changes
            sortSelect.addEventListener('change', submitForm);
        });


