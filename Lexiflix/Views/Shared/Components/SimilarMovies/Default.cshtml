@* // matching the first genre with the movie list *@
@model (IEnumerable<Lexiflix.Models.Db.Movie> Movies, string GenreName)

@if (Model.Movies.Count() > 0)
{
    <h6 class="text-warning text-center my-2">
        Other movies in the <span class="text-light">@Model.GenreName</span> genre
    </h6>

    <div class="d-flex flex-column gap-2 border-1">
        @foreach (var movie in Model.Movies)
        {
            <a asp-action="Details" asp-controller="Movie" asp-route-id="@movie.Id" class="card-body bg-blur text-decoration-none text-light d-flex align-items-center gap-3 w-100">
                <img src="@movie.ImageUrl" alt="@movie.Title" class="search-poster">
                <span class="fw-semibold">@movie.Title</span>
                <small class="text-light ms-auto">@movie.ReleaseYear</small>
            </a>
        }
    </div>
}
else
{
    <h6 class="text-light text-center my-2">
        We don't have any other movies in the <span class="text-warning">@Model.GenreName</span> genre 🥲
    </h6>
    <div class="d-flex mt-5 justify-content-center align-content-center">
        <a asp-action="Index">
            <button class="btn btn-outline-warning">Explore more movies</button>
        </a>
    </div>
}

