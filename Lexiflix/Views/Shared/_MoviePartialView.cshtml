

@model Lexiflix.Models.Movie

<div class="card h-100 bg-black text-light border-secondary shadow-sm">
    <div class="card-img-top position-relative overflow-hidden ">
        <img src="@Model.ImageUrl"
             class="img-fluid w-100 h-100 object-fit-cover"
             alt="@Model.Title"
             loading="lazy" />
    </div>
    <div class="card-body d-flex flex-column p-3">
        <div class="flex-grow-1 mb-3">
            <h5 class="card-title text-truncate mb-2 text-light">@Model.Title</h5>       
            <p class="card-text mb-0 fs-6 text-warning fw-bold">
                <i class="bi bi-tag-fill me-1"></i>
                <strong>Price:</strong> @Model.Price Kr
            </p>
        </div>
        <div class="d-grid gap-2">
            <div class="row g-2">
                <div class="col-6">
                    <a asp-action="Details"
                       asp-route-id="@Model.Id"
                       class="btn btn-outline-secondary text-light btn-sm w-100">
                        <i class="bi bi-info-circle me-1"></i>Details
                    </a>
                </div>
                <div class="col-6">
                    <a asp-action="AddToCart"
                       asp-route-id="@Model.Id"
                       class="btn btn-warning btn-sm w-100 py-1 text-light fw-bold"
                       style="font-size: 0.8rem;">
                        <i class="bi bi-cart-plus me-1"></i>Add to cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>