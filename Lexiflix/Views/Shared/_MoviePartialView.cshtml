

@model Lexiflix.Models.Movie

<div class="card h-100 bg-black text-light border-secondary shadow-sm" style="width: 100%; max-width: 280px; min-height: 380px;">
    <div class="card-img-top position-relative overflow-hidden" style="height: 380px;">
        <img src="@Model.ImageUrl"
             class="img-fluid w-100 h-100"
             style="object-fit: cover;"
             alt="@Model.Title"
             loading="lazy" />
    </div>
    <div class="card-body d-flex flex-column p-2">
        <div class="flex-grow-1 mb-2">
            <h5 class="card-title text-truncate mb-1 text-light" style="font-size: 1rem;">@Model.Title</h5>
            <p class="card-text mb-0 fs-6 text-warning fw-bold" style="font-size: 0.9rem;">
                <i class="bi bi-tag-fill me-1"></i>
                @Model.Price Kr
            </p>
        </div>
        <div class="d-grid gap-1">
            <div class="row g-1">
                <div class="col-6">
                    <a asp-action="Details"
                       asp-route-id="@Model.Id"
                       class="btn btn-outline-secondary text-light btn-sm w-100 py-1"
                       style="font-size: 0.8rem;">
                        <i class="bi bi-info-circle me-1"></i><span class="fw-semibold">Details</span>
                    </a>
                </div>
                <div class="col-6">
                    <a asp-action="AddToCart"
                       asp-route-id="@Model.Id"
                       class="btn btn-warning btn-sm w-100 py-1 text-light fw-bold"
                       style="font-size: 0.8rem;">
                        <i class="bi bi-cart-plus me-1 text-light"></i><span class="text-light">Add to cart</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

