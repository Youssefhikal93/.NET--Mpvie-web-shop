@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_Layout"; // Use your existing layout
}

<div class="container-fluid py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark text-light border-warning p-4">
                <i class="bi bi-exclamation-octagon display-1 text-warning mb-4"></i>
                <h1 class="text-warning">404 - Page Not Found</h1>
                <p class="lead">The page you're looking for doesn't exist or has been moved.</p>
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">
                        <i class="bi bi-house-door"></i> Go Home
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-warning">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

