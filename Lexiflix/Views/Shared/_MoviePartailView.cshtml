@model Lexiflix.Models.Movie

<div class="container py-4">
    <div class="card border-0 bg-dark text-light shadow-lg overflow-hidden">
        <div class="row g-0">
            <!-- Movie Poster Column -->
            <div class="col-md-4 position-relative">
                <img src="@Model.ImageUrl" class="img-fluid h-100 object-fit-cover"
                     alt="@Model.Title" onerror="this.src='https://via.placeholder.com/300x450?text=No+Poster'">
                <div class="position-absolute bottom-0 start-0 w-100 p-3" style="background: linear-gradient(transparent, rgba(0,0,0,0.7))">
                    <span class="badge bg-primary fs-5 px-3 py-2">
                        $@Model.Price.ToString("0.00")
                    </span>
                </div>
            </div>

            <!-- Movie Details Column -->
            <div class="col-md-8">
                <div class="card-body h-100 d-flex flex-column p-4">
                    <!-- Title and Year -->
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="card-title mb-0 text-orange">@Model.Title</h1>
                        <span class="badge bg-warning text-dark fs-6">
                            <i class="bi bi-calendar3 me-1"></i> @Model.ReleaseYear
                        </span>
                    </div>

                    <!-- Director -->
                    <div class="mb-4">
                        <h5 class="text-info mb-2">
                            <i class="bi bi-camera-reels me-2"></i>Directed by
                        </h5>
                        <p class="fs-5 text-light">@Model.Director</p>
                    </div>

                    <!-- Actors Section -->
                    <div class="mb-4">
                        <h5 class="text-info mb-3">
                            <i class="bi bi-people-fill me-2"></i>Starring
                        </h5>
                        <div class="d-flex flex-wrap gap-2">
                            @if (Model.Actors != null && Model.Actors.Any())
                            {
                                @foreach (var actor in Model.Actors)
                                {
                                    <span class="badge bg-gray-800 text-light border border-secondary">
                                        <i class="bi bi-person-check me-1"></i> @actor.Name
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No actors listed</span>
                            }
                        </div>
                    </div>

                    

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 mt-4 pt-3 border-top border-secondary">
                        <a href="#" class="btn btn-orange flex-grow-1">
                            <i class="bi bi-cart-plus me-2"></i>Add to Cart
                        </a>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id },
                                 new { @class = "btn btn-outline-info" })
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
