<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lexiflix</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%2210 0 100 100%22><text y=%22.90em%22 font-size=%2290%22>🎥</text></svg>" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Lexiflix.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-black">

    <header class="mb-5">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black text-uppercase border border-bottom p-4  box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light fw-semi-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house ms-2 h4"></i>
                    <span class="text-warning">Lexiflix</span> Movie shop
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movie" asp-action="Index">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li> 
                    </ul>
                   
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bolder btn btn-outline-warning border border-warning px-3 cart-button"
                               asp-area="" asp-controller="Order" asp-action="ViewCart">
                                <i class="bi bi-cart4 me-2"></i>Shopping Cart
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
    @Html.Partial("_SearchModal")

        </main>
    </div>

    <footer class="border-top border-bg-secondary footer text-muted bg-black">
        <div class="d-flex justify-content-center align-content-center">
            <p class="fw-semibold text-white">
                &copy; 2025 - Lexiflix - Made with <i class="bi bi-suit-heart"></i> by <span class="text-warning">Beta</span> team
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/searchModal.js" asp-append-version="true"></script>
    <script src="~/js/cart.js" asp-append-version="true"></script>
    <script src="~/js/checkout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


