@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid py-4">
    <h1 class="text-warning mb-4">Admin Dashboard</h1>

    <div class="row g-4">
        <!-- Customers Button -->
        <div class="col-md-4">
            <a asp-controller="Customer" asp-action="AdminIndex" class="btn btn-admin-card  text-light w-100 h-100 p-4">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-people-fill display-4 text-warning mb-3"></i>
                    <h3>Customers</h3>
                    <p class="text-light mb-0">Manage all customer accounts</p>
                </div>
            </a>
        </div>

        <!-- Movies Button -->
        <div class="col-md-4">
            <a asp-controller="Movie" asp-action="AdminIndex" class="btn btn-admin-card  text-light w-100 h-100 p-4">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-film display-4 text-warning mb-3"></i>
                    <h3>Movies</h3>
                    <p class="text-light mb-0">Manage movie catalog</p>
                </div>
            </a>
        </div>

        <!-- Orders Button -->
        <div class="col-md-4">
            <a asp-controller="Order" asp-action="Index" class="btn btn-admin-card  text-light w-100 h-100 p-4">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-receipt display-4 text-warning mb-3"></i>
                    <h3>Orders</h3>
                    <p class="text-light mb-0">View and manage orders</p>
                </div>
            </a>
        </div>
    </div>
</div>

