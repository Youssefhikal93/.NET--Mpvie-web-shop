@model Lexiflix.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-warning mb-0">@Model.Title</h1>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Back to Movies
        </a>
    </div>

    <div class="row">
        <!-- Movie Poster -->
        <div class="col-md-4 mb-4 bg-black">
            <div class="card bg-black border-warning h-100">
                <img src="@Model.ImageUrl" class="card-img-top img-fluid" alt="@Model.Title" style="max-height: 500px; object-fit: cover;">
                <div class="card-body text-center">
                    <h4 class="text-warning">@Model.Price.ToString("C")</h4>
                    <a href="#" class="btn btn-outline-warning btn-lg w-100 mt-3">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </a>
                </div>
            </div>
        </div>

        <!-- Movie Details -->
        <div class="col-md-8">
            <div class="card bg-black border-warning text-light h-100">
                <div class="card-body">
                    <h3 class="text-warning border-bottom pb-2 mb-4">Movie Details</h3>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong class="text-warning">Director:</strong> @Model.Director</p>
                            <p><strong class="text-warning">Release Year:</strong> @Model.ReleaseYear</p>
                            <p><strong class="text-warning">Runtime:</strong> 120 min</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong class="text-warning">Genre:</strong> Action, Adventure</p>
                            <p><strong class="text-warning">Rating:</strong> <span class="badge bg-warning text-dark">PG-13</span></p>
                            <p><strong class="text-warning">IMDb:</strong> 8.5/10</p>
                        </div>
                    </div>

                    <h4 class="text-warning border-bottom pb-2 mb-3">Plot Summary</h4>
                    <p class="text-light">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam in dui mauris. Vivamus hendrerit arcu sed erat molestie vehicula. Sed auctor neque eu tellus rhoncus ut eleifend nibh porttitor.</p>

                    <!-- Actors Section -->
                    <h4 class="text-warning border-bottom pb-2 mb-3 mt-4">Cast</h4>
                    <div class="row text-light">
                        @if (Model.Actors != null && Model.Actors.Any())
                        {
                            @foreach (var actor in Model.Actors)
                            {
                                <div class="col-6 col-md-4 col-lg-4 mb-3">
                                    <div class="d-flex align-items-center bg-black p-4 rounded border border-secondary">
                                        <div class="flex justify-content-around align-content-center">
                                             <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;"> 
                                                 <i class="bi bi-person-fill text-dark"></i> 
                                             </div> 
                                        </div>
                                        <div class="flex-grow-1"> 
                                            <h6 class="  text-light">@actor.Name</h6>
                                            <small class="text-light">Actor</small> 
                                         </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <p class="text-light">No cast information available.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
