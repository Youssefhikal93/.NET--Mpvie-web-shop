@model Lexiflix.Models.Movie

<div class="card bg-dark text-light h-100">
    <img src="@Model.ImageUrl" class="card-img-top object-fit-cover" style="height: 250px;" alt="@Model.Title" />
    <div class="card-body">
        <h5 class="card-title text-warning">@Model.Title</h5>
        <p class="card-text">@Model.Director (@Model.ReleaseYear)</p>
        <p class="fw-bold">€@Model.Price</p>

        <form asp-action="AddToCart" asp-controller="Order" method="post">
            <input type="hidden" name="movieId" value="@Model.Id" />
            <input type="hidden" name="price" value="@Model.Price" />
            <button type="submit" class="btn btn-warning w-100 mt-2">
                <i class="bi bi-cart-plus me-1"></i>Add to Cart
            </button>
        </form>
    </div>
</div>