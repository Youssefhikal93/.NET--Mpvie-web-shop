
@model IEnumerable<Lexiflix.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}




<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                <form asp-action="Search" method="get" class="flex-grow-1 me-md-3">
                    <div class="input-group text-light">
                        <input type="text"
                               name="searchString"
                               class="form-control bg-black text-light border-warning search-input"
                               placeholder="Search movies..."
                               aria-label="Search movies">
                        <button class="btn btn-warning text-dark" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>             <div class="d-flex flex-wrap gap-2">
                    <a asp-action="Filter" class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-funnel me-1"></i>Filter
                    </a>
                    <a asp-action="SortByAmount" class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-sort-numeric-down me-1"></i>Sort by Price
                    </a>
                    <a asp-action="SortByYear" class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-sort-numeric-down me-1"></i>Sort by Year
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Movies Grid -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <partial name="_MoviePartialView" model="item" />
            </div>
        }
    </div>

</div>
@* Additional CSS for better styling *@
<style>
    .object-fit-cover {
        object-fit: cover;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
            border-color: rgba(255, 193, 7, 0.5);
        }

    .card-img-top {
        background: linear-gradient(45deg, #1a1a1a, #2d2d2d);
    }

        .card-img-top img {
            transition: transform 0.3s ease;
        }

    .card:hover .card-img-top img {
        transform: scale(1.05);
    }

    .btn-warning:hover {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .search-input::placeholder {
        color: #ffc107 !important;
        opacity: 0.7;
    }

    .search-input:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        background-color: #000;
        color: #fff;
    }

        .search-input:focus::placeholder {
            opacity: 0.5;
        }

    .btn-warning:focus {
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.5);
    }

    .input-group:focus-within {
        z-index: 1;
    }
   
</style>