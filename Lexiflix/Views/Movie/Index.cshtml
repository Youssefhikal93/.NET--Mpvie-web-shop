@using Lexiflix.Utils
@model PaginatedList<Lexiflix.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-warning mb-0">
                <i class="bi bi-film me-2"></i>Movie Collection
            </h2>
            <p class="text-light mb-0">Discover and explore our movie library</p>
        </div>
    </div>

    <!-- Search and Sort Section -->
    <partial name="_SearchSortPartial" />

    <!-- Pagination Info -->
    <partial name="_PaginationPartialInfo" model="Model" />

    <!-- Top Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="mb-4">
            <partial name="_PaginationPartial" model="Model" />
        </div>
    }

    <!-- Movies Grid -->
    <div class="row g-3 d-flex flex-wrap justify-content-center align-content-center">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
                    <partial name="_MoviePartialView" model="item" />
                </div>
            }
        }
    </div>

    <!-- Bottom Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="pt-4 mt-4 border-top border-warning border-opacity-25">
            <partial name="_PaginationPartial" model="Model" />
        </div>
    }
</div>

@* Additional CSS for better styling *@
<style>
    .object-fit-cover {
        object-fit: cover;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
            border-color: rgba(255, 193, 7, 0.5);
        }

    .card-img-top {
        background: linear-gradient(45deg, #1a1a1a, #2d2d2d);
    }

        .card-img-top img {
            transition: transform 0.3s ease;
        }

    .card:hover .card-img-top img {
        transform: scale(1.05);
    }

    .btn-warning:hover {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .search-input::placeholder {
        color: #fff !important;
        opacity: 0.9;
    }

    .search-input:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        background-color: #000;
        color: #fff;
    }

        .search-input:focus::placeholder {
            opacity: 0.5;
        }

    .btn-warning:focus {
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.5);
    }

    .input-group:focus-within {
        z-index: 1;
    }

    .page-link {
        transition: all 0.3s ease;
    }

        .page-link:hover {
            background-color: rgba(255, 193, 7, 0.2) !important;
            color: #ffc107 !important;
            border-color: #ffc107 !important;
        }

    .page-item.active .page-link {
        background-color: #ffc107 !important;
        border-color: #ffc107 !important;
        color: #000 !important;
        font-weight: bold;
    }

    .border-warning {
        border-color: rgba(255, 193, 7, 0.3) !important;
    }
</style>